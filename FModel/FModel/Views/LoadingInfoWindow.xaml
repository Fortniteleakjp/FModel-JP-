<adonis:AdonisWindow x:Class="FModel.Views.LoadingInfoWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:adonis="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                     Title="読み込み中..."
                     Height="200"
                     Width="400"
                     ShowInTaskbar="False"
                     WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15">
            <TextBlock Text="{Binding StatusText}" HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="{Binding IsIndeterminate}" 
                         Value="{Binding ProgressValue}" 
                         Height="10" Margin="0,10,0,0"/>
            <TextBlock Text="{Binding ProgressText}" HorizontalAlignment="Center" FontSize="11" Margin="0,5,0,0"/>
            <TextBlock HorizontalAlignment="Center" FontSize="11" Margin="0,5,0,0">
                <Run Text="経過時間: "/>
                <Run Text="{Binding ElapsedTime}"/>
            </TextBlock>
            <TextBlock HorizontalAlignment="Center" FontSize="11" Margin="0,5,0,0">
                <Run Text="ダウンロードサイズ: "/>
                <Run Text="{Binding DownloadSize}"/>
            </TextBlock>
            <TextBlock HorizontalAlignment="Center" FontSize="11" Margin="0,5,0,0">
                <Run Text="速度: "/>
                <Run Text="{Binding EstimatedTime}"/>
            </TextBlock>
        </StackPanel>
    </Grid>
</adonis:AdonisWindow>

<adonisControls:AdonisWindow x:Class="FModel.Views.ProfileWindow"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                             xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
                             mc:Ignorable="d"
                             Title="プロファイル" Height="450" Width="800"
                             IconVisibility="Collapsed"
                             WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="268,5,268,5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="最新バージョンで追加されたもの" Width="135" />
                <Button Content="全て" Width="100" Margin="5,0,0,0" />
            </StackPanel>
        </Grid>

        <ListView x:Name="ResultsListView" Margin="0,33,0,5"
                  Style="{DynamicResource {x:Type ListView}}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="名前" Width="200"/>
                    <GridViewColumn Header="パス" Width="400"/>
                    <GridViewColumn Header="変更の種類" Width="150"/>
                </GridView>
            </ListView.View>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="パスをコピー" />
                    <MenuItem Header="エクスプローラーで開く" />
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="準備OK"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="追加: "/>
                    <TextBlock Text="0" Margin="0,0,10,0" />
                    <TextBlock Text="変更: "/>
                    <TextBlock Text="0" Margin="0,0,10,0" />
                    <TextBlock Text="削除: "/>
                    <TextBlock Text="0" Margin="0,0,5,0" />
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</adonisControls:AdonisWindow>

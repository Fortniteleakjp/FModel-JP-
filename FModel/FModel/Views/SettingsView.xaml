<adonisControls:AdonisWindow x:Class="FModel.Views.SettingsView"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:local="clr-namespace:FModel"
                             xmlns:c4pMeshes="clr-namespace:CUE4Parse_Conversion.Meshes;assembly=CUE4Parse-Conversion"
                             xmlns:controls="clr-namespace:FModel.Views.Resources.Controls"
                             xmlns:converters="clr-namespace:FModel.Views.Resources.Converters"
                             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
                             xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                             xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
                             xmlns:settings="clr-namespace:FModel.Settings"
                             WindowStartupLocation="CenterScreen"
                             ResizeMode="NoResize"
                             IconVisibility="Collapsed"
                             SizeToContent="Height"
                             MinHeight="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight}, Converter={converters:RatioConverter}, ConverterParameter='0.10'}"
                             Width="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenWidth}, Converter={converters:RatioConverter}, ConverterParameter='0.45'}">
    <adonisControls:AdonisWindow.Style>
        <Style TargetType="adonisControls:AdonisWindow"
               BasedOn="{StaticResource {x:Type adonisControls:AdonisWindow}}">
            <Setter Property="Title"
                    Value="Settings" />
        </Style>
    </adonisControls:AdonisWindow.Style>
    <adonisControls:AdonisWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <controls:OnTagDataTemplateSelector x:Key="TagTemplateSelector" />
            <DataTemplate x:Key="GeneralTemplate">
                <Grid adonisExtensions:LayerExtension.Layer="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="出力先" VerticalAlignment="Center" Margin="0 0 0 5" ToolTip="ログ ファイル、バックアップ、その他の削除不可のファイルが保存されるフォルダ" />
                    <TextBox x:Name="ImJackedBro" Grid.Row="0" Grid.Column="2" IsReadOnly="True" Text="{Binding OutputDirectory, Source={x:Static local:Settings.UserSettings.Default}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 5" />
                    <Button Grid.Row="0" Grid.Column="4" Content="..." HorizontalAlignment="Right" Click="OnBrowseOutput" Margin="0 0 0 5" />

                    <CheckBox Grid.Row="0" Grid.Column="6" Margin="5 0 0 5" ToolTip="Customize the directory of more output folders"
                              DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}"
                              IsChecked="{Binding SettingsView.UseCustomOutputFolders, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="7" HorizontalAlignment="Right"
                          DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}"
                          Visibility="{Binding SettingsView.UseCustomOutputFolders, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="{Binding ActualWidth, ElementName=ImJackedBro}" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="生データの出力先 *" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="11" FontStyle="Italic" Margin="0 0 0 5" />
                        <TextBox Grid.Row="0" Grid.Column="2" IsReadOnly="True" Text="{Binding RawDataDirectory, Source={x:Static local:Settings.UserSettings.Default}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" Margin="0 0 0 5" />
                        <Button Grid.Row="0" Grid.Column="4" Content="..." HorizontalAlignment="Right" Click="OnBrowseRawData" Margin="0 0 0 5" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="プロパティディレクトリを保存 *" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="11" FontStyle="Italic" Margin="0 0 0 5" />
                        <TextBox Grid.Row="1" Grid.Column="2" IsReadOnly="True" Text="{Binding PropertiesDirectory, Source={x:Static local:Settings.UserSettings.Default}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" Margin="0 0 0 5" />
                        <Button Grid.Row="1" Grid.Column="4" Content="..." HorizontalAlignment="Right" Click="OnBrowseProperties" Margin="0 0 0 5" />

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="テクスチャディレクトリを保存 *" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="11" FontStyle="Italic" Margin="0 0 0 5" />
                        <TextBox Grid.Row="2" Grid.Column="2" IsReadOnly="True" Text="{Binding TextureDirectory, Source={x:Static local:Settings.UserSettings.Default}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" Margin="0 0 0 5" />
                        <Button Grid.Row="2" Grid.Column="4" Content="..." HorizontalAlignment="Right" Click="OnBrowseTexture" Margin="0 0 0 5" />

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="オーディオディレクトリを保存 *" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="11" FontStyle="Italic" Margin="0 0 0 5" />
                        <TextBox Grid.Row="3" Grid.Column="2" IsReadOnly="True" Text="{Binding AudioDirectory, Source={x:Static local:Settings.UserSettings.Default}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" Margin="0 0 0 5" />
                        <Button Grid.Row="3" Grid.Column="4" Content="..." HorizontalAlignment="Right" Click="OnBrowseAudio" Margin="0 0 0 5" />
                    </Grid>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Discordに表示するか" VerticalAlignment="Center" />
                    <ComboBox Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="5" ItemsSource="{Binding SettingsView.DiscordRpcs}" SelectedItem="{Binding SettingsView.SelectedDiscordRpc, Mode=TwoWay}"
                              DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={x:Static converters:EnumToStringConverter.Instance}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Separator Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="7" Style="{StaticResource CustomSeparator}" Tag="GAME"></Separator>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="読み込むファイル *" VerticalAlignment="Center" Margin="0 0 0 5" />
                    <TextBox Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="3" IsReadOnly="True" Text="{Binding GameDirectory, Source={x:Static local:Settings.UserSettings.Default}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0 0 0 5" />
                    <Button Grid.Row="4" Grid.Column="6" Content="..." HorizontalAlignment="Right" Click="OnBrowseDirectories" Margin="0 0 0 5" />

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="UE Versions *" VerticalAlignment="Center" Margin="0 0 0 5" ToolTip="Override the UE version to use when parsing packages" />
                    <controls:FilterableComboBox Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="5" SelectedItem="{Binding SettingsView.SelectedUeGame, Mode=TwoWay}"
                                                 ItemsSource="{Binding SettingsView.UeGames}"
                                                 Style="{StaticResource UComboBox}"
                                                 DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}"
                                                 Margin="0 0 0 5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={x:Static converters:EnumToStringConverter.Instance}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </controls:FilterableComboBox>

                    <Expander Grid.Row="7"
                              Grid.Column="0"
                              Grid.ColumnSpan="7"
                              Margin="0,4,0,0"
                              Style="{StaticResource ExpanderButtonLikeHeader}"
                              Header="Show Compare Game Options"
                              IsEnabled="{Binding GameDirectory, Source={x:Static settings:UserSettings.Default}, Converter={x:Static converters:StringNotEmptyToBoolConverter.Instance}}">
                        <Expander.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground"
                                        Value="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" />
                            </Style>
                        </Expander.Resources>
                        <Grid Margin="0,2,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Separator Grid.Row="0"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="7"
                                       Style="{StaticResource CustomSeparator}"
                                       Tag="COMPARE GAME BUILD"></Separator>

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="7"
                                       HorizontalAlignment="Center"
                                       Margin="0 0 0 10"
                                       TextAlignment="Center"
                                       Foreground="{DynamicResource {x:Static adonisUi:Brushes.AlertBrush}}">
                                The options below allow you to compare game assets between two builds of the same game. Please select a<LineBreak />
                                comparison build that matches the current game, but is from an earlier version.
                            </TextBlock>

                            <TextBlock Grid.Row="2"
                                       Grid.Column="0"
                                       Text="Compare Archive Directory *"
                                       VerticalAlignment="Center"
                                       Margin="0 0 0 5" />
                            <TextBox Grid.Row="2"
                                     Grid.Column="2"
                                     Grid.ColumnSpan="3"
                                     IsReadOnly="True"
                                     Text="{Binding DiffGameDirectory, Source={x:Static settings:UserSettings.Default}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0 0 0 5" />
                            <Button Grid.Row="2"
                                    Grid.Column="6"
                                    Content="..."
                                    HorizontalAlignment="Right"
                                    Click="OnBrowseDiffDirectory"
                                    Margin="0 0 0 5" />

                            <TextBlock Grid.Row="3"
                                       Grid.Column="0"
                                       Text="Compare UE Version *"
                                       VerticalAlignment="Center"
                                       Margin="0 0 0 5"
                                       ToolTip="Override the UE version to use when parsing compare packages" />
                            <controls:FilterableComboBox Grid.Row="3"
                                                         Grid.Column="2"
                                                         Grid.ColumnSpan="5"
                                                         SelectedItem="{Binding SettingsView.SelectedDiffUeGame, Mode=TwoWay}"
                                                         ItemsSource="{Binding SettingsView.DiffUeGames}"
                                                         Style="{StaticResource UComboBox}"
                                                         DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}"
                                                         Margin="0 0 0 5">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={x:Static converters:EnumToStringConverter.Instance}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </controls:FilterableComboBox>

                            <TextBlock Grid.Row="4"
                                       Grid.Column="0"
                                       Text="Compare Mapping File"
                                       VerticalAlignment="Center"
                                       Margin="0 0 0 5" />
                            <CheckBox Grid.Row="4"
                                      Grid.Column="2"
                                      Margin="0 5 0 10"
                                      DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}"
                                      Content="{Binding IsChecked, RelativeSource={RelativeSource Self}, Converter={x:Static converters:BoolToToggleConverter.Instance}}"
                                      IsChecked="{Binding SettingsView.DiffMappingEndpoint.Overwrite, Mode=TwoWay}">
                                <CheckBox.IsEnabled>
                                    <MultiBinding Converter="{x:Static converters:BooleanAndConverter.Instance}">
                                        <Binding Source="{x:Static settings:UserSettings.Default}"
                                                 Path="DiffGameDirectory"
                                                 Converter="{x:Static converters:StringNotEmptyToBoolConverter.Instance}" />
                                        <Binding Path="SettingsView.DiffMappingEndpoint"
                                                 Converter="{x:Static converters:IsNullToBoolReversedConverter.Instance}" />
                                    </MultiBinding>
                                </CheckBox.IsEnabled>
                            </CheckBox>

                            <TextBlock Grid.Row="5"
                                       Grid.Column="0"
                                       Text="Compare Mapping File Path"
                                       VerticalAlignment="Center"
                                       Margin="0 0 0 5"
                                       DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}"
                                       Visibility="{Binding SettingsView.DiffMappingEndpoint.Overwrite, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed, TargetNullValue=Collapsed}" />
                            <TextBox Grid.Row="5"
                                     Grid.Column="2"
                                     Grid.ColumnSpan="3"
                                     Margin="0 0 0 5"
                                     Text="{Binding SettingsView.DiffMappingEndpoint.FilePath, Mode=TwoWay}"
                                     DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}"
                                     Visibility="{Binding SettingsView.DiffMappingEndpoint.Overwrite, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed, TargetNullValue=Collapsed}" />
                            <Button Grid.Row="5"
                                    Grid.Column="6"
                                    Content="..."
                                    HorizontalAlignment="Right"
                                    Click="OnBrowseDiffMappings"
                                    Margin="0 0 0 5"
                                    DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}"
                                    Visibility="{Binding SettingsView.DiffMappingEndpoint.Overwrite, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed, TargetNullValue=Collapsed}" />
                            <Button Grid.Row="6"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="7"
                                    Content="Reset Compare Game Settings"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Padding="8,4"
                                    MinWidth="200"
                                    Cursor="Hand"
                                    Margin="0,5"
                                    Click="OnResetCompareSettings" />
                        </Grid>
                    </Expander>

                    <Separator Grid.Row="12"
                               Grid.Column="0"
                               Grid.ColumnSpan="5"
                               Style="{StaticResource CustomSeparator}" />

                    <TextBlock Grid.Row="13"
                               Grid.Column="0"
                               Text="Texture Platform *"
                               VerticalAlignment="Center"
                               Margin="0 0 0 5"
                               ToolTip="Override the game's platform to ensure texture compatibility" />
                    <ComboBox Grid.Row="13"
                              Grid.Column="2"
                              Grid.ColumnSpan="5"
                              ItemsSource="{Binding SettingsView.Platforms}"
                              SelectedItem="{Binding SettingsView.SelectedUePlatform, Mode=TwoWay}"
                              DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}"
                              Margin="0 0 0 5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={x:Static converters:EnumToStringConverter.Instance}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Grid.Row="14" Grid.Column="0" Text="サウンドの再生" VerticalAlignment="Center" Margin="0 0 0 5" ToolTip="圧縮されたサウンドファイルの読み込み方法" />
                    <ComboBox Grid.Row="14" Grid.Column="2" Grid.ColumnSpan="5" ItemsSource="{Binding SettingsView.CompressedAudios}" SelectedItem="{Binding SettingsView.SelectedCompressedAudio, Mode=TwoWay}"
                              DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}" Margin="0 0 0 5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={x:Static converters:EnumToStringConverter.Instance}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Grid.Row="15" Grid.Column="0" Text="メインの表示言語" VerticalAlignment="Center" Margin="0 0 0 5" ToolTip="パッケージを解析するときに使用・表示される言語" />
                    <ComboBox Grid.Row="15" Grid.Column="2" Grid.ColumnSpan="5" ItemsSource="{Binding SettingsView.AssetLanguages}" SelectedItem="{Binding SettingsView.SelectedAssetLanguage, Mode=TwoWay}"
                              DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}" Margin="0 0 0 5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={x:Static converters:EnumToStringConverter.Instance}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Grid.Row="16" Grid.Column="0" Text="保存時にディレクトリ構造を維持" VerticalAlignment="Center" Margin="0 5 0 5" ToolTip="ゲームのパス通りに保存する場合はチェックを入れてください" />
                    <CheckBox Grid.Row="16" Grid.Column="2" Content="{Binding IsChecked, RelativeSource={RelativeSource Self}, Converter={x:Static converters:BoolToToggleConverter.Instance}}"
                              IsChecked="{Binding KeepDirectoryStructure, Source={x:Static local:Settings.UserSettings.Default}, Mode=TwoWay}" Margin="0 5 0 0"/>

                    <Separator Grid.Row="17" Grid.Column="0" Grid.ColumnSpan="7" Style="{StaticResource CustomSeparator}" Tag="詳細設定"></Separator>

                    <TextBlock Grid.Row="18" Grid.Column="0" Text="バージョン管理の設定 *" VerticalAlignment="Center" Margin="0 0 0 5" />
                    <Grid Grid.Row="18" Grid.Column="2" Grid.ColumnSpan="5" Margin="0 0 0 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="カスタムVersion" Click="OpenCustomVersions" />
                        <Button Grid.Column="2" Content="オプション" Click="OpenOptions" />
                        <Button Grid.Column="4" Content="MapStruct型" Click="OpenMapStructTypes" />
                    </Grid>

                    <TextBlock Grid.Row="19" Grid.Column="0" Text="起動時のAESの再読み込み" VerticalAlignment="Center" Margin="0 0 0 5"
                               DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}"
                               Visibility="{Binding SettingsView.AesEndpoint.IsValid, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <ComboBox Grid.Row="19" Grid.Column="2" Grid.ColumnSpan="5" Margin="0 0 0 5"
                              DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}"
                              ItemsSource="{Binding SettingsView.AesReloads}" SelectedItem="{Binding SettingsView.SelectedAesReload, Mode=TwoWay}"
                              Visibility="{Binding SettingsView.AesEndpoint.IsValid, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={x:Static converters:EnumToStringConverter.Instance}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Grid.Row="20" Grid.Column="0" Text="データを自動取得" VerticalAlignment="Center" Margin="0 0 0 5" />
                    <Grid Grid.Row="20" Grid.Column="2" Grid.ColumnSpan="5" Margin="0 0 0 5"
                          DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="AES" Click="OpenAesEndpoint" />
                        <Button Grid.Column="2" Content="Mapping" Click="OpenMappingEndpoint" />
                    </Grid>

                    <TextBlock Grid.Row="21" Grid.Column="0" Text="マッピングファイルをローカルで指定" VerticalAlignment="Center" Margin="0 0 0 5" />
                    <CheckBox Grid.Row="21" Grid.Column="2" Margin="0 5 0 10"
                              DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}"
                              Content="{Binding IsChecked, RelativeSource={RelativeSource Self}, Converter={x:Static converters:BoolToToggleConverter.Instance}}"
                              IsChecked="{Binding SettingsView.MappingEndpoint.Overwrite, Mode=TwoWay}" />

                    <TextBlock Grid.Row="22" Grid.Column="0" Text="Mapping File Path" VerticalAlignment="Center" Margin="0 0 0 5"
                               DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}"
                               Visibility="{Binding SettingsView.MappingEndpoint.Overwrite, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <TextBox Grid.Row="22" Grid.Column="2" Grid.ColumnSpan="3" Margin="0 0 0 5" Text="{Binding SettingsView.MappingEndpoint.FilePath, Mode=TwoWay}"
                             DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}"
                             Visibility="{Binding SettingsView.MappingEndpoint.Overwrite, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <Button Grid.Row="22" Grid.Column="6" Content="..." HorizontalAlignment="Right" Click="OnBrowseMappings" Margin="0 0 0 5"
                            DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}"
                            Visibility="{Binding SettingsView.MappingEndpoint.Overwrite, Converter={StaticResource BoolToVisibilityConverter}}" />

                    <TextBlock Grid.Row="23" Grid.Column="0" Text="スクリプトバイトコードをシリアル化" VerticalAlignment="Center" Margin="0 0 0 5" />
                    <CheckBox Grid.Row="23" Grid.Column="2" Content="{Binding IsChecked, RelativeSource={RelativeSource Self}, Converter={x:Static converters:BoolToToggleConverter.Instance}}"
                              IsChecked="{Binding ReadScriptData, Source={x:Static local:Settings.UserSettings.Default}, Mode=TwoWay}" Margin="0 5 0 10"/>

                    <TextBlock Grid.Row="24" Grid.Column="0" Text="インラインシェーダーマップのシリアル化" VerticalAlignment="Center" Margin="0 0 0 5" />
                    <CheckBox Grid.Row="24" Grid.Column="2" Content="{Binding IsChecked, RelativeSource={RelativeSource Self}, Converter={x:Static converters:BoolToToggleConverter.Instance}}"
                              IsChecked="{Binding ReadShaderMaps, Source={x:Static local:Settings.UserSettings.Default}, Mode=TwoWay}" Margin="0 5 0 10"/>

                    <TextBlock Grid.Row="25" Grid.Column="0" Text="最大 Wwise Bank (.BNK) プリフェッチ" VerticalAlignment="Center" Margin="0 0 0 5" />
                    <Slider Grid.Row="25" Grid.Column="2" Grid.ColumnSpan="5" TickPlacement="None" Minimum="0" Maximum="512" Ticks="0,2,4,8,16,32,64,128,256,512"
                            AutoToolTipPlacement="BottomRight" IsMoveToPointEnabled="True" IsSnapToTickEnabled="True" Margin="0 5 0 5"
                            Value="{Binding WwiseMaxBnkPrefetch, Source={x:Static local:Settings.UserSettings.Default}, Mode=TwoWay}"/>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="CreatorTemplate">
                <Grid adonisExtensions:LayerExtension.Layer="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0" Grid.ColumnSpan="3" DataContext="{Binding DataContext, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Views.SettingsView}}}">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value="pack://application:,,,/Resources/T_Placeholder_Item_Image.png"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SettingsView.SelectedCosmeticStyle}" Value="{x:Static local:EIconStyle.Default}">
                                        <Setter Property="Source" Value="pack://application:,,,/Resources/Default.png"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SettingsView.SelectedCosmeticStyle}" Value="{x:Static local:EIconStyle.NoBackground}">
                                        <Setter Property="Source" Value="pack://application:,,,/Resources/NoBackground.png"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SettingsView.SelectedCosmeticStyle}" Value="{x:Static local:EIconStyle.NoText}">
                                        <Setter Property="Source" Value="pack://application:,,,/Resources/NoText.png"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SettingsView.SelectedCosmeticStyle}" Value="{x:Static local:EIconStyle.Flat}">

<!-- Views/Resources/Controls/ProgressWindow.xaml -->
<Window x:Class="FModel.Views.Resources.Controls.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="バックアップ作成中" Height="180" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="ToolWindow" Topmost="True">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="{Binding Message}" FontWeight="Bold" Margin="0,0,0,10"/>
            <ProgressBar Height="20" Minimum="0" Maximum="100" Value="{Binding Progress}" />
            <TextBlock Text="{Binding ETA}" Margin="0,10,0,0" HorizontalAlignment="Right" FontSize="12"/>
            <Button Content="キャンセル" Margin="0,20,0,0" Height="30" Width="80" HorizontalAlignment="Center" Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>

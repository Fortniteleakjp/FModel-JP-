<adonisControls:AdonisWindow x:Class="FModel.Views.PakComparerWindow"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                             xmlns:converters="clr-namespace:FModel.Views.Resources.Converters"
                             Title="{DynamicResource PakComparer_Title}" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <adonisControls:AdonisWindow.Style>
        <Style TargetType="adonisControls:AdonisWindow" BasedOn="{StaticResource {x:Type adonisControls:AdonisWindow}}"/>
    </adonisControls:AdonisWindow.Style>
    <adonisControls:AdonisWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/FModel;component/Views/Resources/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </adonisControls:AdonisWindow.Resources>

    <Grid>
        <DataGrid ItemsSource="{Binding Diffs}" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding StatusType}" Value="New">
                            <Setter Property="Background" Value="#2000FF00" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding StatusType}" Value="Modified">
                            <Setter Property="Background" Value="#20FFFF00" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding StatusType}" Value="Removed">
                            <Setter Property="Background" Value="#20FF0000" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding StatusType}" Value="Renamed">
                            <Setter Property="Background" Value="#2000FFFF" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="{DynamicResource PakComparer_Header_FileName}" Width="*" SortMemberPath="Name">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Text="{Binding Guid}" FontSize="10" Opacity="0.7" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="{DynamicResource PakComparer_Header_Status}" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="{DynamicResource PakComparer_Header_OldSize}" Binding="{Binding OldSize, Converter={x:Static converters:SizeToStringConverter.Instance}}" Width="100"/>
                <DataGridTextColumn Header="{DynamicResource PakComparer_Header_NewSize}" Binding="{Binding NewSize, Converter={x:Static converters:SizeToStringConverter.Instance}}" Width="100"/>
                <DataGridTextColumn Header="{DynamicResource PakComparer_Header_SizeDiff}" Binding="{Binding SizeDiff, Converter={x:Static converters:SizeToStringConverter.Instance}}" Width="100"/>
                <DataGridTextColumn Header="{DynamicResource PakComparer_Header_OldCount}" Binding="{Binding OldCount}" Width="100"/>
                <DataGridTextColumn Header="{DynamicResource PakComparer_Header_NewCount}" Binding="{Binding NewCount}" Width="100"/>
                <DataGridTextColumn Header="{DynamicResource PakComparer_Header_CountDiff}" Binding="{Binding CountDiff}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</adonisControls:AdonisWindow>
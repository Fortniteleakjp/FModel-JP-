<adonisControls:AdonisWindow x:Class="FModel.Views.ContentSearchView"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
                             xmlns:viewModels="clr-namespace:FModel.ViewModels"
                             mc:Ignorable="d"
                             d:DataContext="{d:DesignInstance viewModels:ApplicationViewModel}"
                             Title="高度な検索" Height="450" Width="800"
                             IconVisibility="Collapsed"
                             WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="5">
            <Button DockPanel.Dock="Right" Content="検索" Width="80" Margin="5,0,0,0" Click="OnSearchClick"/>
            <TextBox x:Name="SearchTextBox" KeyDown="OnSearchKeyDown"/>
        </DockPanel>

        <ListView x:Name="SearchResultsListView" Grid.Row="1" Margin="5,0,5,5"
                  ItemsSource="{Binding CUE4Parse.SearchVm.ContentSearchResults}"
                  MouseDoubleClick="OnAssetDoubleClick"
                  Style="{DynamicResource {x:Type ListView}}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Path" DisplayMemberBinding="{Binding Path}" Width="550"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="準備OK"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</adonisControls:AdonisWindow>
<adonisControls:AdonisWindow x:Class="FModel.Views.ContentSearchView"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
                             xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
                             xmlns:local="clr-namespace:FModel.Views"
                             xmlns:viewModels="clr-namespace:FModel.ViewModels"
                             mc:Ignorable="d"
                             d:DataContext="{d:DesignInstance viewModels:ApplicationViewModel}"
                             Title="{DynamicResource ContentSearch_Title}" Height="450" Width="800"
                             IconVisibility="Collapsed"
                             WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="5">
            <Button DockPanel.Dock="Right" Content="{DynamicResource ContentSearch_Button_Search}" Width="80" Margin="5,0,0,0" Click="OnSearchClick"/>
            <TextBox x:Name="SearchTextBox" KeyDown="OnSearchKeyDown"
                     adonisExtensions:WatermarkExtension.Watermark="{DynamicResource ContentSearch_Watermark_Search}"/>
        </DockPanel>

        <GroupBox Header="{Binding FilterStatusText, RelativeSource={RelativeSource AncestorType=local:ContentSearchView}}"
                  Grid.Row="1"
                  Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ListBox x:Name="FolderFilterListBox"
                         Grid.Column="0"
                         ItemsSource="{Binding SearchFolders, RelativeSource={RelativeSource AncestorType=adonisControls:AdonisWindow}}"
                         SelectionMode="Extended"
                         Height="80"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" ToolTip="{Binding}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <TextBox x:Name="FolderInputTextBox" KeyDown="OnFolderInputKeyDown" Margin="0,0,0,5"
                             adonisExtensions:WatermarkExtension.Watermark="{DynamicResource ContentSearch_Watermark_FolderInput}"/>
                    <Button x:Name="AddFolderButton" Content="{DynamicResource ContentSearch_Button_Add}" Click="OnAddFolderClick" Margin="0,0,0,5"/>
                    <Button x:Name="RemoveFolderButton" Content="{DynamicResource ContentSearch_Button_Remove}" Click="OnRemoveFolderClick"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Header="フィルター設定" Grid.Row="2" Margin="5">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="アセットタイプ:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                <ComboBox Grid.Row="0" Grid.Column="1" Margin="0,0,10,5"
                          SelectedValue="{Binding AssetTypeFilter, RelativeSource={RelativeSource AncestorType=Window}}"
                          SelectedValuePath="Content">
                    <ComboBoxItem Content="All"/>
                    <ComboBoxItem Content="Texture"/>
                    <ComboBoxItem Content="Material"/>
                    <ComboBoxItem Content="Mesh"/>
                    <ComboBoxItem Content="Animation"/>
                    <ComboBoxItem Content="Sound"/>
                    <ComboBoxItem Content="Blueprint"/>
                </ComboBox>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="ファイル名:" VerticalAlignment="Center" Margin="0,0,5,5"/>
                <TextBox Grid.Row="0" Grid.Column="3" Margin="0,0,0,5"
                         Text="{Binding FileNameFilter, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="ファイル名の一部を入力して絞り込み"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="サイズ (MB):" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal">
                    <TextBox Width="60" Text="{Binding MinFileSize, RelativeSource={RelativeSource AncestorType=Window}}" VerticalAlignment="Center"/>
                    <TextBlock Text=" - " VerticalAlignment="Center" Margin="5,0"/>
                    <TextBox Width="60" Text="{Binding MaxFileSize, RelativeSource={RelativeSource AncestorType=Window}}" VerticalAlignment="Center"/>
                    <TextBlock Text="(0 = 指定なし)" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Gray" FontStyle="Italic"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <ListView x:Name="SearchResultsListView" Grid.Row="3" Margin="5,0,5,5"
                  ItemsSource="{Binding CUE4Parse.SearchVm.ContentSearchResults}"
                  MouseDoubleClick="OnAssetDoubleClick"
                  Style="{DynamicResource {x:Type ListView}}"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{DynamicResource ContentSearch_Header_Name}" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="{DynamicResource ContentSearch_Header_Path}" DisplayMemberBinding="{Binding Path}" Width="550"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StatusBar Grid.Row="4">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="{DynamicResource ContentSearch_Status_Ready}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</adonisControls:AdonisWindow>
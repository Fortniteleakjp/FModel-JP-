<adonisControls:AdonisWindow x:Class="FModel.Views.ImageMerger"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
                             mc:Ignorable="d"
                             Title="画像マージャー" Height="720" Width="1280"
                             Icon="/Resources/FModel.ico"
                             WindowStartupLocation="CenterScreen">

    <Grid Background="#1E1E1E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <!-- Canvas Area (Left) -->
        <Grid Grid.Column="0" Background="#282828">
            <!-- Checkerboard Background for Transparency -->
            <Border>
                <Border.Background>
                    <DrawingBrush TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                        <DrawingBrush.Drawing>
                            <DrawingGroup>
                                <GeometryDrawing Brush="#333333">
                                    <GeometryDrawing.Geometry>
                                        <RectangleGeometry Rect="0,0,20,20" />
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                                <GeometryDrawing Brush="#404040">
                                    <GeometryDrawing.Geometry>
                                        <GeometryGroup>
                                            <RectangleGeometry Rect="0,0,10,10" />
                                            <RectangleGeometry Rect="10,10,10,10" />
                                        </GeometryGroup>
                                    </GeometryDrawing.Geometry>
                                </GeometryDrawing>
                            </DrawingGroup>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Border.Background>
            </Border>

            <!-- Image Preview with Scroll -->
            <ScrollViewer x:Name="CanvasScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Padding="50" Focusable="False" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                <Image x:Name="ImagePreview" Stretch="None" RenderOptions.BitmapScalingMode="NearestNeighbor" 
                       MouseLeftButtonUp="Click_DrawPreview"
                       PreviewMouseLeftButtonDown="ImagePreview_PreviewMouseLeftButtonDown"
                       PreviewMouseMove="ImagePreview_PreviewMouseMove"
                       PreviewMouseLeftButtonUp="ImagePreview_PreviewMouseLeftButtonUp">
                    <Image.LayoutTransform>
                        <ScaleTransform x:Name="CanvasScaleTransform" ScaleX="1" ScaleY="1"/>
                    </Image.LayoutTransform>
                </Image>
            </ScrollViewer>
        </Grid>

        <!-- Sidebar (Right) -->
        <Grid Grid.Column="1" Background="#383838">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Properties & Actions -->
            <StackPanel Grid.Row="0" Margin="15">
                <TextBlock Text="プロパティ" Foreground="#AAAAAA" FontSize="11" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <TextBlock Text="列数" Foreground="White" Margin="0,0,0,5"/>
                <Slider x:Name="SizeSlider" Minimum="1" Maximum="20" Value="1" 
                        TickFrequency="1" IsSnapToTickEnabled="True" 
                        AutoToolTipPlacement="TopLeft" 
                        Thumb.DragCompleted="DrawPreview" Margin="0,0,0,20"/>

                <TextBlock Text="アクション" Foreground="#AAAAAA" FontSize="11" FontWeight="Bold" Margin="0,0,0,10"/>
                <UniformGrid Columns="2" Rows="2">
                    <Button x:Name="OpenImageButton" Content="ポップアウト" Click="OnOpenImage" Margin="2" Height="30"/>
                    <Button x:Name="SaveImageButton" Content="保存" Click="OnSaveImage" Margin="2" Height="30"/>
                    <Button x:Name="CopyImageButton" Content="コピー" Click="OnCopyImage" Margin="2" Height="30"/>
                    <Button x:Name="ClearButton" Content="クリア" Click="OnClear" Margin="2" Height="30"/>
                </UniformGrid>
            </StackPanel>

            <!-- Layers List -->
            <DockPanel Grid.Row="1" Margin="15,0,15,0">
                <TextBlock DockPanel.Dock="Top" Text="レイヤー" Foreground="#AAAAAA" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>
                <ListBox x:Name="ImagesListBox" 
                         Background="#252525" 
                         BorderThickness="0"
                         Foreground="White"
                         SelectionMode="Extended"
                         AllowDrop="True"
                         Drop="ImagesListBox_Drop"
                         DragOver="ImagesListBox_DragOver"
                         PreviewMouseLeftButtonDown="ImagesListBox_PreviewMouseLeftButtonDown"
                         MouseMove="ImagesListBox_MouseMove">
                    <ListBox.Resources>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <!-- Eye Icon Toggle -->
                                                <ToggleButton x:Name="VisibilityButton" Focusable="False"
                                                              IsChecked="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                                              Click="OnVisibilityToggle"
                                                              Width="20" Height="20" Margin="0,0,5,0"
                                                              Background="Transparent" BorderThickness="0">
                                                    <ToggleButton.Template>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Path x:Name="EyeIcon" Data="M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5Z" 
                                                                  Fill="#D0D0D0" Width="14" Height="10" Stretch="Uniform" VerticalAlignment="Center"/>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsChecked" Value="False">
                                                                    <Setter TargetName="EyeIcon" Property="Fill" Value="#404040"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </ToggleButton.Template>
                                                </ToggleButton>
                                                <ContentPresenter Grid.Column="1" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" TargetName="Bd" Value="#444444"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" TargetName="Bd" Value="#505050"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.Resources>
                </ListBox>
            </DockPanel>

            <!-- Layer Controls -->
            <Grid Grid.Row="2" Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="AddButton" Content="+" Click="OnImageAdd" ToolTip="画像を追加" Margin="2" Height="30" FontWeight="Bold"/>
                <Button x:Name="DeleteButton" Content="-" Click="ModifyItemInList" ToolTip="レイヤーを削除" Margin="2" Height="30" FontWeight="Bold"/>
                <Button x:Name="UpButton" Content="▲" Click="ModifyItemInList" ToolTip="上へ移動" Margin="2" Height="30"/>
                <Button x:Name="DownButton" Content="▼" Click="ModifyItemInList" ToolTip="下へ移動" Margin="2" Height="30"/>
            </Grid>
        </Grid>
    </Grid>
</adonisControls:AdonisWindow>

<adonisControls:AdonisWindow x:Class="FModel.Views.ReferenceChainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:local="clr-namespace:FModel.Views"
        mc:Ignorable="d"
        Title="{DynamicResource RefViewer_Title}" Height="720" Width="1280" WindowStartupLocation="CenterScreen">
    <adonisControls:AdonisWindow.Style>
        <Style TargetType="adonisControls:AdonisWindow" BasedOn="{StaticResource {x:Type adonisControls:AdonisWindow}}"/>
    </adonisControls:AdonisWindow.Style>
    <adonisControls:AdonisWindow.InputBindings>
        <KeyBinding Key="F" Modifiers="Control" Command="{x:Static local:ReferenceChainWindow.FindCommand}"/>
    </adonisControls:AdonisWindow.InputBindings>
    <adonisControls:AdonisWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/FModel;component/Views/Resources/Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </adonisControls:AdonisWindow.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ツールバー -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,0">
            <TextBlock Text="{DynamicResource RefViewer_Mode}" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"/>
            <ComboBox SelectedIndex="{Binding SearchMode}" Width="160" VerticalAlignment="Center" Margin="0,0,10,0">
                <ComboBoxItem Content="{DynamicResource RefViewer_Mode_Dependencies}"/>
                <ComboBoxItem Content="{DynamicResource RefViewer_Mode_Referencers}"/>
            </ComboBox>
            <TextBlock Text="{DynamicResource RefViewer_Filter}" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"/>
            <ComboBox SelectedValue="{Binding AssetTypeFilter}" SelectedValuePath="Content" Width="100" VerticalAlignment="Center" Margin="0,0,10,0">
                <ComboBoxItem Content="All" IsSelected="True"/>
                <ComboBoxItem Content="Texture"/>
                <ComboBoxItem Content="Material"/>
                <ComboBoxItem Content="Mesh"/>
                <ComboBoxItem Content="Animation"/>
                <ComboBoxItem Content="Sound"/>
                <ComboBoxItem Content="Blueprint"/>
                <ComboBoxItem Content="Config (.ini)"/>
            </ComboBox>
            <TextBlock Text="{DynamicResource RefViewer_Depth}" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"/>
            <TextBox Text="{Binding MaxDepth}" Width="50" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button Content="{DynamicResource RefViewer_Refresh}" Click="OnRefreshClick" VerticalAlignment="Center" IsDefault="True"/>
            <TextBlock Text="{DynamicResource RefViewer_Search}" VerticalAlignment="Center" Margin="20,0,5,0" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"/>
            <TextBox x:Name="SearchBox" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Width="150" VerticalAlignment="Center" Margin="0,0,5,0" KeyDown="OnSearchKeyDown"/>
            <Button Content="{DynamicResource RefViewer_SearchBtn}" Click="OnSearchClick" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <Button Content="&lt;" Click="OnPrevSearchClick" VerticalAlignment="Center" ToolTip="{DynamicResource RefViewer_Prev_Tooltip}" Margin="0,0,2,0"/>
            <Button Content="&gt;" Click="OnNextSearchClick" VerticalAlignment="Center" ToolTip="{DynamicResource RefViewer_Next_Tooltip}"/>
        </StackPanel>

        <!-- 読み込み中の表示 -->
        <Grid Grid.Row="1" Margin="10" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ProgressBar Grid.Column="0" Minimum="0" Maximum="{Binding ProgressMax}" Value="{Binding ProgressValue}" Width="100" Height="20" Margin="0,0,10,0"/>
            <TextBlock Grid.Column="1" Text="{Binding ProgressText}" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"/>
        </Grid>

        <!-- 結果のビュー -->
        <ScrollViewer Grid.Row="2" x:Name="MainScrollViewer"
                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" PanningMode="None"
                  Background="Transparent"
                  PreviewMouseWheel="OnPreviewMouseWheel"
                  PreviewMouseLeftButtonDown="OnScrollViewerMouseLeftButtonDown"
                  PreviewMouseLeftButtonUp="OnScrollViewerMouseLeftButtonUp"
                  PreviewMouseMove="OnScrollViewerMouseMove">
            <Grid Width="{Binding CanvasWidth}" Height="{Binding CanvasHeight}" Margin="100">
                <Grid.Background>
                    <DrawingBrush TileMode="Tile" Viewport="0,0,50,50" ViewportUnits="Absolute">
                        <DrawingBrush.Drawing>
                            <GeometryDrawing>
                                <GeometryDrawing.Geometry>
                                    <GeometryGroup>
                                        <LineGeometry StartPoint="0,0" EndPoint="0,50"/>
                                        <LineGeometry StartPoint="0,0" EndPoint="50,0"/>
                                    </GeometryGroup>
                                </GeometryDrawing.Geometry>
                                <GeometryDrawing.Pen>
                                    <Pen Brush="#19808080" Thickness="1"/>
                                </GeometryDrawing.Pen>
                            </GeometryDrawing>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </Grid.Background>
                <Grid.LayoutTransform>
                    <ScaleTransform ScaleX="{Binding ZoomScale}" ScaleY="{Binding ZoomScale}"/>
                </Grid.LayoutTransform>
                <!-- Connections (棒) -->
                <ItemsControl ItemsSource="{Binding Connections}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Path Data="{Binding CurveData}" Stroke="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" StrokeThickness="2" Opacity="0.5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Nodes (カード) -->
                <ItemsControl x:Name="NodesItemsControl" ItemsSource="{Binding FlatNodes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                            <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="250" Height="80" CornerRadius="4" Background="{Binding Background}"
                                    MouseLeftButtonDown="OnNodeMouseLeftButtonDown" MouseLeftButtonUp="OnNodeMouseLeftButtonUp" MouseMove="OnNodeMouseMove"
                                    Cursor="Hand">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="{DynamicResource {x:Static adonisUi:Brushes.Layer3BorderBrush}}"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                                <Setter Property="BorderBrush" Value="#FFD700"/>
                                                <Setter Property="BorderThickness" Value="3"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="{DynamicResource RefViewer_Ctx_OpenAsset}" Click="OnOpenAssetClick"/>
                                        <MenuItem Header="{DynamicResource RefViewer_Ctx_CopyPath}" Click="OnCopyPathClick"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <Grid Margin="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <Grid Margin="0,0,5,0">
                                            <Viewbox Width="16" Height="16">
                                                <Viewbox.Style>
                                                    <Style TargetType="Viewbox">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasPreview}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Viewbox.Style>
                                                <Canvas Width="24" Height="24">
                                                    <Path Fill="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}" Data="{Binding IconData}" />
                                                </Canvas>
                                            </Viewbox>
                                            <Image Source="{Binding PreviewImage}" Width="40" Height="40" Stretch="Uniform" Visibility="{Binding HasPreview, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </Grid>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Text="{Binding Path}" FontSize="10" Opacity="0.6" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Margin="0,5,0,0" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </Grid>
</adonisControls:AdonisWindow>
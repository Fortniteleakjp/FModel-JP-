<adonisControls:AdonisWindow x:Class="FModel.Views.AesView"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                             Title="AES Key"
                             WindowStartupLocation="CenterScreen"
                             ResizeMode="NoResize"
                             SizeToContent="WidthAndHeight">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="AES Key:" FontWeight="Bold" />
        <TextBox Grid.Row="1" x:Name="AesKeyTextBox" IsReadOnly="True" Margin="0,5,0,10" />
        <Button Grid.Row="2" Content="Copy AES Key" Click="OnCopyAes" />

        <TextBlock Grid.Row="3" Text="GUID:" FontWeight="Bold" Margin="0,10,0,0" />
        <TextBox Grid.Row="4" x:Name="GuidTextBox" IsReadOnly="True" Margin="0,5,0,10" />
        <Button Grid.Row="5" Content="Copy GUID" Click="OnCopyGuid" />
    </Grid>
</adonisControls:AdonisWindow>
